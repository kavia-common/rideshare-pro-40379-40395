# Backend API Server - .env.example
# Copy to .env and adjust for your environment.

# Core server config
PORT=4000
LOG_LEVEL=dev
TRUST_PROXY=0

# Security
# IMPORTANT: Set a strong secret in production
JWT_SECRET=change_me_in_production

# Database
# For local dev with Docker or local MongoDB:
# e.g., mongodb://localhost:27017/rideshare
MONGODB_URI=mongodb://localhost:27017/rideshare

# CORS / Origins
# Set your frontend origin (scheme+host+port). Use * only for dev.
# Example: http://localhost:3000
REACT_APP_FRONTEND_URL=http://localhost:3000
# Backends sometimes host UI or proxies; kept for compatibility.
REACT_APP_BACKEND_URL=http://localhost:4000
# Websocket URL (Socket.IO). For local dev, same as backend URL is fine.
REACT_APP_WS_URL=http://localhost:4000

# Healthcheck path
REACT_APP_HEALTHCHECK_PATH=/health

# Optional OSRM base override (defaults to public OSRM)
# OSRM_BASE=https://router.project-osrm.org/route/v1/driving

# Frontend-aligned variables for cohesion (optional)
REACT_APP_NODE_ENV=development
REACT_APP_NEXT_TELEMETRY_DISABLED=1
REACT_APP_ENABLE_SOURCE_MAPS=1
REACT_APP_PORT=3000
REACT_APP_TRUST_PROXY=0
REACT_APP_LOG_LEVEL=dev
REACT_APP_FEATURE_FLAGS={}
REACT_APP_EXPERIMENTS_ENABLED=0
